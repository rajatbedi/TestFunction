{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase emulators:start --only functions",
    "shell": "npx firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase use prod && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "emulator": "firebase emulators:start --import=./emulator-data --export-on-exit"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.15.2",
    "@sendgrid/mail": "^8.1.4",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "docxtemplater": "^3.19.0",
    "dotenv": "^16.6.0",
    "firebase-admin": "^13.2.0",
    "firebase-functions": "^6.3.2",
    "fs-extra": "^11.3.0",
    "googleapis": "^148.0.0",
    "nodemailer": "^6.4.10",
    "pizzip": "^3.0.6",
    "stripe": "^17.7.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.27.1",
    "@eslint/js": "^9.31.0",
    "eslint": "^9.31.0",
    "eslint-plugin-promise": "^7.2.1",
    "firebase-functions-test": "^3.4.1",
    "globals": "^16.3.0"
  },
  "private": true
}
